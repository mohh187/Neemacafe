      mount('dessert-cake', data.dessert.cake);
      mount('dessert-side', data.dessert.side);
      const cartTitle = document.querySelector('#cart h3');
      if(cartTitle) cartTitle.textContent = lang==='ar'?'Ø³Ù„Ø© Ø§Ù„Ø·Ù„Ø¨Ø§Øª':'Cart';
