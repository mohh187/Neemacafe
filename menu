    const ORDER_LOG_KEY = 'nima.orderLog';
    const CUSTOMER_PROFILE_KEY = 'nima.customerProfile';
    const CUSTOMER_REGISTRY_KEY = 'nima.customerRegistry';
    const LOYALTY_KEY = 'nima.loyaltyTracker';
